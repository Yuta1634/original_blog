    <% @posts.each do |post| %>
      <%= link_to post_path(post.id), class: "content" do %>
        <div class="content-image"><%= image_tag post.image.thumb.url if post.image? %></div>
        <div class="content__list">
          <div class="content__list--title"><%= post.title%></div>
          <div class="content__list--text"><%= simple_format post.body.truncate(50)%></div>
          <div class="content__list--time"><%= post.created_at.strftime("%Y年%m月%d日")%></div>
        </div>
      <% end %>
    <% end %>